// Prisma Schema - Clean Relational Design
// Based on Analytics_Test_Data.json structure

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Core Entities

model Vendor {
  id              String    @id @default(cuid())
  name            String    @unique
  taxId           String?
  address         String?
  partyNumber     String?
  category        String    @default("Uncategorized")
  invoices        Invoice[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([name])
  @@index([category])
}

model Customer {
  id        String    @id @default(cuid())
  name      String    @unique
  address   String?
  invoices  Invoice[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([name])
}

model Invoice {
  id              String        @id @default(cuid())
  invoiceNumber   String        @unique
  vendorId        String
  customerId      String?
  
  // Dates
  issueDate       DateTime
  deliveryDate    DateTime?
  dueDate         DateTime?
  
  // Amounts
  subTotal        Decimal       @db.Decimal(12, 2)
  taxAmount       Decimal       @db.Decimal(12, 2)
  totalAmount     Decimal       @db.Decimal(12, 2)
  
  // Status
  status          InvoiceStatus @default(PENDING)
  documentType    String?
  
  // Metadata
  originalFileName String?
  processedAt     DateTime?
  
  // Relations
  vendor          Vendor        @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  customer        Customer?     @relation(fields: [customerId], references: [id], onDelete: SetNull)
  lineItems       LineItem[]
  payments        Payment[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([vendorId])
  @@index([customerId])
  @@index([issueDate])
  @@index([dueDate])
  @@index([status])
}

model LineItem {
  id          String   @id @default(cuid())
  invoiceId   String
  
  srNo        Int?
  description String?
  quantity    Decimal  @db.Decimal(10, 3)
  unitPrice   Decimal  @db.Decimal(12, 2)
  totalPrice  Decimal  @db.Decimal(12, 2)
  
  // Optional German accounting fields
  sachkonto   String?
  buSchluessel String?
  
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([invoiceId])
}

model Payment {
  id              String   @id @default(cuid())
  invoiceId       String
  
  paidDate        DateTime
  amount          Decimal  @db.Decimal(12, 2)
  paymentMethod   String?
  
  // Bank details
  bankAccount     String?
  bic             String?
  accountName     String?
  
  invoice         Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())

  @@index([invoiceId])
  @@index([paidDate])
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  PARTIAL
  CANCELLED
}
